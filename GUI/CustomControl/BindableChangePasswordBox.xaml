<UserControl x:Class="GUI.CustomControl.BindableChangePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="500">
    <Grid>
        <PasswordBox x:Name="Txt_Password"
                     FontSize="30"
                     FontWeight="Medium"
                     FontFamily="UTM HelveBold"
                     Foreground="{StaticResource titleColor1}"
                     CaretBrush="Black"
                     BorderBrush="{StaticResource color11}"
                     BorderThickness="0,0,0,1"
                     Padding="5,0,0,0">
        </PasswordBox>
    </Grid>
</UserControl>
