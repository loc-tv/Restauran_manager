<Window x:Class="GUI.View.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Home" Height="720" Width="1280"
        Icon="/Image/Logo_2.ico"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True">
    
    
    <Border  CornerRadius="0"
                Background="White"
                Opacity="1.0"
                BorderThickness="2">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FAF7F0" Offset="0.00"/>
                <GradientStop Color="#CDFCF6" Offset="0.25"/>
                <GradientStop Color="#BCCEF8" Offset="0.50"/>
                <GradientStop Color="#B1AFFF" Offset="0.75"/>
                <GradientStop Color="#98A8F8" Offset="1.00"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0"
                        Background="#0072BC">
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="230"/>
                        <RowDefinition Height="450"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnMinimize"
                                        Content="{materialDesign:PackIcon Kind = WindowMinimize}"
                                        ToolTip="Minimize"
                                        Cursor="Hand"
                                        Grid.Column="1"
                                        Height="25" Width="30"
                                        Click="btnMinimize_Click">

                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#EEF1FF"/>
                                                <Setter Property="Foreground" Value="#3B9AE1"/>
                                                <Setter Property="Opacity" Value="0.3"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="5"
                                                    Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                                  HorizontalAlignment="Center"/>

                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button x:Name="btnClose"
                                        Content="{materialDesign:PackIcon Kind=WindowClose}"
                                        ToolTip="Close"
                                        Cursor="Hand"
                                        Grid.Column="2"
                                        Click="btnClose_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF2442"/>
                                                <Setter Property="Foreground" Value="#3B9AE1"/>
                                                <Setter Property="Opacity" Value="1"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="5"
                                                    Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                                  HorizontalAlignment="Center"/>

                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                        </Grid>
                    </StackPanel>
                    <StackPanel Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Border CornerRadius="10"
                                Height="220"
                                Width=" 600">
                            <Border.Background>
                                <ImageBrush ImageSource="/Image/HomeBackgroud.png"
                                            Stretch="UniformToFill"
                                            Opacity="0.7"/>
                            </Border.Background>
                            
                            <TextBlock Text="Chúc bạn một ngày làm việc tràn đầy năng lượng"
                                       Foreground="White"
                                       FontSize="45"
                                       FontWeight="Medium"
                                       FontFamily="SVN-Motion Picture"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Grid.Row="2">
                        <Button x:Name="btn_Info" Width="400" Height="90"
                                Content="Thông tin"
                                Foreground="White"
                                FontFamily="UTM HelveBold"
                                FontWeight="Bold"
                                FontSize="50"
                                ToolTip="Show info"
                                materialDesign:RippleAssist.Feedback="#EFFFFD"
                                Margin="0,30,0,0"
                                Click="btn_Info_Click">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#51A6DE"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="materialDesign:RippleAssist.Feedback" Value="#EFFFFD"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
            
        </Grid>
    </Border>
</Window>
